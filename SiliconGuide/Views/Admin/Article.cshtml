@model SiliconGuide.Models.ArticleModel

@{
    ViewData["Title"] = "Create";
}
<script src="~/js/ckeditor/ckeditor.js"></script>
<div class="container p-3 my-3 border">
    <h1> @ViewBag.PageName @Model.ArticleID</h1>
    <div class="row">
        <div class="col-sm-6">
            <hr />
            <form asp-action="Article">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ArticleID" class="control-label"></label>
                    <input asp-for="ArticleID" class="form-control" />
                    <span asp-validation-for="ArticleID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Text" class="control-label"></label>
                    <input asp-for="Text" class="form-control" />
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Save" />
                    <a class="btn btn-danger" asp-action="Index">Back</a>
                </div>
            </form>
        </div>
    </div>
    <textarea id="editor" placeholder="Редактирование текста"></textarea>
</div>
<br />

<script>
    CKEDITOR.replace('editor');
</script>


